<p class="headline">Your Week Stats</p>

<table>
  <thead>
    <tr>
      <th>Starting point</th>
      <th>Finish point</th>
      <th>Distance</th>
    </tr>
  </thead>

  <tbody>
    <% @distances.each do |distance| %>
      <tr>
        <td><%= distance.locations.first ? distance.locations.first.address : 'brak' %></td>
        <td><%= distance.locations.last ? distance.locations.last.address : 'brak' %></td>
        <td><%= distance.distance_in_km ? distance.distance_in_km.round(2) : 'brak' %> km</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div  class="link" id="btn_stats">
  <%= link_to 'Calculate New Distance', new_location_path %>
</div>